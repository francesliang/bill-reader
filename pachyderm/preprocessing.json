{
    "pipeline": {
        "name": "preprocessing"
    },
    "description": "A pipeline to preprocess data for training InvoiceNet.",
    "transform": {
        "cmd": [
            "python3", 
            "/InvoiceNet/prepare_data.py", 
            "--data_dir",
            "/pfs/train_data",
            "--val_size",
            "0.5",
            "--out_dir",
            "/pfs/out"
        ],
        "image": "invoicenet:1.0.0"
    },
    "input": {
        "pfs": {
            "repo": "train_data",
            "glob": "/*"
        }
    }
}
